{
  "name": "Animepahe Smart Player",
  "version": "1.0",
  "description": "Adds 'Next Episode' shortcut (Shift+N) to AnimePahe.",
  "permissions": ["scripting"],
  "host_permissions": ["https://*.animepahe.si/play/*"],
  "content_scripts": [
    {
      "matches": ["https://*.animepahe.si/play/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Animepahe x Mal",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
