{
  "name": "Anipahe x Mal Extension",
  "version": "0.1.0",
  "description": "Enabling Mal updates while watching Anipahe.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.animepahe.si/play/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.animepahe.si/play/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.animepahe.si/play/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Animepahe x Mal",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
